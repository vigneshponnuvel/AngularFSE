.feedbackSelector input{
    margin:0;padding:0;    
            appearance:none;
}

.feedbackSelector input:active +.smiley-value{opacity: .9;}

.feedbackSelector input:checked +.smiley-value{   
            filter: none;
}
.smiley-value{
    cursor:pointer;
    background-size:contain;
    background-repeat:no-repeat;
    display:inline-block;
    width:100px;height:70px;    
            transition: all 100ms ease-in;    
             filter: brightness(1) grayscale(1) opacity(.3);
}
.smiley-value:hover{    
            filter: brightness(1) grayscale(.5) opacity(.9);
}
